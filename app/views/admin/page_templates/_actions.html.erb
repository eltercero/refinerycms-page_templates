<ul>
  <% if Admin::PageTemplatesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_page_templates_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_page_template_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::PageTemplatesController.sortable? and PageTemplate.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Page Templates"),
                 admin_page_templates_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Page Templates"),
                 admin_page_templates_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>